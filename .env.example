# /.env.example

# --- Global Settings for Docker Compose ---
# Port exposed on the host machine for Nginx
NGINX_PORT=8080

# --- PostgreSQL / TimescaleDB Settings ---
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_DB=neuro_data

# --- RabbitMQ Settings ---
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# --- MinIO Settings ---
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET_NAME=neuro-data

# --- Connection Strings (used by application services) ---
# These are constructed from the variables above but defined here for clarity.
DATABASE_URL=postgres://admin:password@db:5432/neuro_data
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
MINIO_ENDPOINT=minio:9000