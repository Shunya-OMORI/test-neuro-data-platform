# Port for the BIDS Exporter service
PORT=5004

# Connection URL for PostgreSQL
DATABASE_URL=postgres://admin:password@db:5432/neuro_data

# MinIO Connection Settings
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=neuro-data
MINIO_SECURE=false

# Directory inside the container to store generated BIDS datasets
BIDS_OUTPUT_DIR=/bids_output